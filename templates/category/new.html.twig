{% extends 'base.html.twig' %}

{% block title %}New Category{% endblock %}

{% block stylesheets %}
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    .page-title {
        font-weight: 600;
        color: #0d6efd;
    }

    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
    }

    .card-header {
        background-color: #0d6efd;
        color: white;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        font-weight: 500;
    }

    .btn {
        border-radius: 8px;
    }

    input.form-control,
    textarea.form-control {
        border-radius: 10px;
        transition: all 0.2s ease;
    }

    input.form-control:focus,
    textarea.form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .form-label {
        font-weight: 500;
    }

    .form-group {
        margin-bottom: 45px; 
    }

    .back-btn {
        text-decoration: none;
        color: #6c757d;
        font-weight: 500;
    }

    .back-btn:hover {
        text-decoration: underline;
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title">
            <i class="bi bi-plus-circle me-2"></i> Create a New Category
        </h1>
        <a href="{{ path('app_category_index') }}" class="btn btn-outline-secondary shadow-sm">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="card mx-auto shadow-sm" style="max-width: 700px;">
        <div class="card-header">
            <i class="bi bi-pencil-square me-2"></i> Category Information
        </div>
        <div class="card-body">
            {{ include('category/_form.html.twig') }}
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('app_category_index') }}" class="back-btn">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to category list
        </a>
    </div>
</div>
{% endblock %}
