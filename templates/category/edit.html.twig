{% extends 'base.html.twig' %}

{% block title %}{{ button_label|default('New') }} Category{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title text-primary">
            <i class="bi bi-plus-circle me-2"></i> {{ button_label|default('Add') }} Category
        </h1>
        <a href="{{ path('app_category_index') }}" class="btn btn-outline-secondary shadow-sm">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="card mx-auto shadow-sm" style="max-width: 700px;">
        <div class="card-header bg-primary text-white">
            <i class="bi bi-card-text me-2"></i> Category Information
        </div>
        <div class="card-body">
            {{ include('category/_form.html.twig', {'button_label': button_label|default('Save')}) }}
        </div>
    </div>
</div>
{% endblock %}
