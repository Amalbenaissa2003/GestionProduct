{% extends 'base.html.twig' %}

{% block title %}Category Management{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">
            <i class="bi bi-tags-fill me-2"></i> Categories
        </h1>
        <a href="{{ path('app_category_new') }}" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Add New Category
        </a>
    </div>

    {% if categories is not empty %}
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td class="fw-semibold">{{ category.id }}</td>
                            <td>{{ category.name }}</td>
                            <td class="text-muted">{{ category.description|length > 50 ? category.description|slice(0,50) ~ 'â€¦' : category.description }}</td>
                            <td class="text-center">
                                <a href="{{ path('app_category_show', {'id': category.id}) }}" 
                                   class="btn btn-sm btn-outline-info me-1">
                                    <i class="bi bi-eye"></i> Show
                                </a>
                                <a href="{{ path('app_category_edit', {'id': category.id}) }}" 
                                   class="btn btn-sm btn-outline-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        <div class="alert alert-warning text-center mt-4 shadow-sm">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> No categories found.
        </div>
    {% endif %}
</div>
{% endblock %}
