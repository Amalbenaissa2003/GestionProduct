{% extends 'base.html.twig' %}

{% block title %}Category Management{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-color: #f8f9fb;
        font-family: 'Poppins', sans-serif;
    }

    .table-container {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }

    .table thead th {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        border-bottom: 2px solid #dee2e6;
        font-weight: 600;
        color: #2c3e50;
        padding: 1.25rem 1rem;
        font-size: 0.9rem;
        text-transform: uppercase;
    }

    .table tbody td {
        padding: 1.25rem 1rem;
        vertical-align: middle;
        border-bottom: 1px solid #f1f3f4;
        color: #555;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .category-name {
        font-weight: 600;
        color: #2c3e50;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
    }

    .btn-action {
        border: none;
        border-radius: 8px;
        padding: 0.5rem 0.75rem;
        font-size: 0.8rem;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 70px;
    }

    .btn-view {
        background: rgba(13, 110, 253, 0.1);
        color: #0d6efd;
    }

    .btn-view:hover {
        background: #0d6efd;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
    }

    .btn-edit {
        background: rgba(255, 193, 7, 0.1);
        color: #ffc107;
    }

    .btn-edit:hover {
        background: #ffc107;
        color: #212529;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255, 193, 7, 0.3);
    }

    .btn-delete {
        background: rgba(220, 53, 69, 0.1);
        color: #dc3545;
    }

    .btn-delete:hover {
        background: #dc3545;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
    }

    .btn-primary {
        background: linear-gradient(135deg, #0d6efd, #0a58ca);
        border: none;
        border-radius: 25px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(13, 110, 253, 0.4);
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 20px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    }

    .empty-state i {
        font-size: 4rem;
        color: #dee2e6;
        margin-bottom: 1.5rem;
    }

    .empty-state h4 {
        color: #6c757d;
        margin-bottom: 1rem;
    }

    .badge-id {
        background: linear-gradient(135deg, #6c757d, #495057);
        color: white;
        padding: 0.35rem 0.75rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }
</style>
{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold text-primary">
        <i class="bi bi-tags me-2"></i> Categories
    </h1>
    <a href="{{ path('app_category_new') }}" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-circle me-1"></i> Add New Category
    </a>
</div>

<div class="container mb-5">
    {% if categories is not empty %}
        <div class="table-container">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th width="80">ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th width="200" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                    <tr>
                        <td><span class="badge-id">#{{ category.id }}</span></td>
                        <td><span class="category-name">{{ category.name }}</span></td>
                        <td>{{ category.description }}</td>
                        <td>
                            <div class="action-buttons">
                                <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn-action btn-view" title="View Details">
                                    <i class="bi bi-eye me-1"></i> View
                                </a>
                                <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn-action btn-edit" title="Edit Category">
                                    <i class="bi bi-pencil me-1"></i> Edit
                                </a>
                                <form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}" 
                                      onsubmit="return confirm('Are you sure you want to delete {{ category.name }}?');" 
                                      class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                    <button type="submit" class="btn-action btn-delete" title="Delete Category">
                                        <i class="bi bi-trash me-1"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="empty-state">
            <i class="bi bi-tags"></i>
            <h4 class="text-muted">No Categories Found</h4>
            <p class="text-muted mb-4">Get started by adding your first category.</p>
            <a href="{{ path('app_category_new') }}" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i> Add Your First Category
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}

