{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block stylesheets %}
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }

    .page-title {
        font-weight: 600;
        color: #0d6efd;
    }

    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        max-width: 700px;
        margin: auto;
    }

    .card-header {
        background-color: #0d6efd;
        color: white;
        font-weight: 500;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .table th {
        width: 150px;
        font-weight: 500;
    }

    .btn {
        border-radius: 8px;
        margin-right: 10px;
    }

    .back-btn {
        text-decoration: none;
        color: #6c757d;
        font-weight: 500;
    }

    .back-btn:hover {
        text-decoration: underline;
    }

    
</style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title"><i class="bi bi-tags-fill me-2"></i> Category Details</h1>
        <a href="{{ path('app_category_index') }}" class="btn btn-outline-secondary shadow-sm">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header">
            <i class="bi bi-card-text me-2"></i> Information
        </div>
        <div class="card-body">
            <table class="table table-borderless mb-0">
                <tbody>
                    <tr>
                        <th scope="row">ID</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Name</th>
                        <td>{{ category.name }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Description</th>
                        <td>{{ category.description }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-center mt-4">
        <div class="d-inline-flex align-items-center gap-3">
            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-primary px-4 shadow-sm">
                <i class="bi bi-pencil-square me-1"></i> Edit
            </a>

            {{ include('category/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
