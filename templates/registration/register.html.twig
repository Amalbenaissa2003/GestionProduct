{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-color: #f0f4f8;
        font-family: 'Poppins', sans-serif;
    }

    .auth-container {
        max-width: 500px;
        margin: 3rem auto;
        padding: 2.5rem;
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    }

    h1 {
        font-size: 1.75rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 2rem;
        text-align: center;
    }

    .form-control {
        border-radius: 10px;
        padding: 0.75rem 1rem;
        border: 1px solid #ced4da;
        margin-bottom: 1rem;
    }

    .btn {
        width: 100%;
        padding: 0.75rem;
        border-radius: 25px;
        font-weight: 600;
        margin-top: 1rem;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: linear-gradient(135deg, #0d6efd, #0a58ca);
        border: none;
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(13, 110, 253, 0.4);
    }

    .alert {
        border-radius: 15px;
        font-size: 0.9rem;
    }

    .login-footer {
        text-align: center;
        margin-top: 1.5rem;
        font-size: 0.9rem;
    }

    .login-footer a {
        color: #0d6efd;
        text-decoration: none;
    }

    .login-footer a:hover {
        text-decoration: underline;
    }
</style>
{% endblock %}

{% block body %}
<div class="auth-container">
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.first_name, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.last_name, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.phone, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.password, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.register, {'attr': {'class': 'btn btn-primary'}}) }}
    {{ form_end(registrationForm) }}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-3">{{ message }}</div>
    {% endfor %}

    <div class="login-footer">
        Already have an account? <a href="{{ path('app_login') }}">Sign in here</a>
    </div>
</div>
{% endblock %}

