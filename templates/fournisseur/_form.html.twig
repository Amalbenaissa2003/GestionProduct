{{ form_start(form) }}
<div class="p-4">
    <div class="row g-4">
        <div class="col-md-6">
            <label class="form-label">
                <i class="bi bi-person-fill text-primary me-2"></i> Name
            </label>
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="col-md-6">
            <label class="form-label">
                <i class="bi bi-envelope-fill text-primary me-2"></i> Email
            </label>
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="col-md-6">
            <label class="form-label">
                <i class="bi bi-telephone-fill text-primary me-2"></i> Phone
            </label>
            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.phone) }}
        </div>

        <div class="col-md-6">
            <label class="form-label">
                <i class="bi bi-geo-alt-fill text-primary me-2"></i> Address
            </label>
            {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.address) }}
        </div>
    </div>
</div>
<hr class="my-4">
<div class="text-center mt-4">
    <button type="submit" class="btn btn-primary px-4 py-2 shadow-sm">
        <i class="bi bi-save me-2"></i> {{ button_label|default('Save') }}
    </button>
</div>

{{ form_end(form) }}

