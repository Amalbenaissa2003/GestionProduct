{% extends 'base.html.twig' %}

{% block title %}Ajouter un Fournisseur{% endblock %}

{% block body %}
<div class="form-container">
    <h1>Ajouter un Fournisseur</h1>

    {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.name, 'Nom du fournisseur') }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'required': true}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="form-group">
            {{ form_label(form.email, 'Email') }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'type':'email', 'required': true}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="form-group">
            {{ form_label(form.phone, 'Téléphone') }}
            {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'pattern':'[0-9]{8}', 'required': true}}) }}
            {{ form_errors(form.phone) }}
        </div>

        <div class="form-group">
            {{ form_label(form.address, 'Adresse') }}
            {{ form_widget(form.address, {'attr': {'class': 'form-control', 'required': true}}) }}
            {{ form_errors(form.address) }}
        </div>

        <button type="submit" class="btn btn-primary mt-3">Ajouter</button>

    {{ form_end(form) }}

    <div style="text-align:center; margin-top:15px;">
        <a href="{{ path('app_fournisseur_index') }}">⬅ Retour à la liste</a>
    </div>
</div>
{% endblock %}


