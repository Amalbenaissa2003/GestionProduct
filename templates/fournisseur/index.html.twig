{% extends 'base.html.twig' %}

{% block title %}Supplier Management{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">
            <i class="bi bi-truck me-2"></i> Suppliers
        </h1>
        <a href="{{ path('app_fournisseur_new') }}" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Add New Supplier
        </a>
    </div>

    {% if fournisseurs is not empty %}
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for fournisseur in fournisseurs %}
                        <tr>
                            <td class="fw-semibold">{{ fournisseur.id }}</td>
                            <td>{{ fournisseur.name }}</td>
                            <td>{{ fournisseur.email }}</td>
                            <td>{{ fournisseur.phone }}</td>
                            <td>{{ fournisseur.address }}</td>
                            <td class="text-center">
                                <a href="{{ path('app_fournisseur_show', {'id': fournisseur.id}) }}" 
                                   class="btn btn-sm btn-outline-info me-1">
                                    <i class="bi bi-eye"></i> Show
                                </a>
                                <a href="{{ path('app_fournisseur_edit', {'id': fournisseur.id}) }}" 
                                   class="btn btn-sm btn-outline-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        <div class="alert alert-warning text-center mt-4 shadow-sm">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> No suppliers found.
        </div>
    {% endif %}
</div>
{% endblock %}


