{% extends 'base.html.twig' %}

{% block title %}Détails du Fournisseur{% endblock %}

{% block body %}
<div class="show-container">
    <h1>Détails du Fournisseur</h1>

    <table class="show-table">
        <tbody>
            <tr><th>ID</th><td>{{ fournisseur.id }}</td></tr>
            <tr><th>Nom</th><td>{{ fournisseur.name }}</td></tr>
            <tr><th>Email</th><td>{{ fournisseur.email }}</td></tr>
            <tr><th>Téléphone</th><td>{{ fournisseur.phone }}</td></tr>
            <tr><th>Adresse</th><td>{{ fournisseur.address }}</td></tr>
        </tbody>
    </table>

    <div class="actions">
        <a href="{{ path('app_fournisseur_index') }}" class="btn-show">⬅ Retour</a>
        <a href="{{ path('app_fournisseur_edit', {'id': fournisseur.id}) }}" class="btn-edit">✏️ Modifier</a>
        <form method="post" action="{{ path('app_fournisseur_delete', {'id': fournisseur.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce fournisseur ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ fournisseur.id) }}">
            <button class="btn-delete" type="submit">Supprimer</button>
        </form>
    </div>
</div>
{% endblock %}

