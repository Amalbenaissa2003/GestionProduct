{{ form_start(form) }}
<div class="p-4">
    <div class="row g-4">
        <div class="col-md-6">
            <label class="form-label">
                <i class="bi bi-box-seam text-primary me-2"></i> Product Name
            </label>
            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter product name'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="col-md-6">
            <label class="form-label">
                <i class="bi bi-cash-stack text-primary me-2"></i> Price
            </label>
            {{ form_widget(form.price, {'attr': {'class': 'form-control', 'placeholder': 'Enter price'}}) }}
            {{ form_errors(form.price) }}
        </div>

        <div class="col-md-12">
            <label class="form-label">
                <i class="bi bi-card-text text-primary me-2"></i> Description
            </label>
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'Enter description'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="col-md-6">
            <label class="form-label">
                <i class="bi bi-tags-fill text-primary me-2"></i> Category
            </label>
            {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.category) }}
        </div>

        <div class="col-md-6">
            <label class="form-label">
                <i class="bi bi-truck text-primary me-2"></i> Supplier
            </label>
            {{ form_widget(form.fournisseur, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.fournisseur) }}
        </div>

        <div class="col-md-12">
            <label class="form-label">
                <i class="bi bi-image text-primary me-2"></i> Image URL
            </label>
            {{ form_widget(form.image, {'attr': {'class': 'form-control', 'placeholder': 'Enter image path or URL'}}) }}
            {{ form_errors(form.image) }}
        </div>
    </div>
</div>
<hr class="my-4">
<div class="text-center mt-4">
    <button type="submit" class="btn btn-primary px-4 py-2 shadow-sm">
        <i class="bi bi-save me-2"></i> {{ button_label|default('Save') }}
    </button>
</div>
{{ form_end(form) }}

