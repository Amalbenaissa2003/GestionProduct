{% extends 'base.html.twig' %}

{% block title %}Product Gallery{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-color: #f8f9fb;
        font-family: 'Poppins', sans-serif;
    }

    .product-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        background: #fff;
        height: 100%;
    }

    .product-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
    }

    .product-image-container {
        height: 220px;
        overflow: hidden;
        position: relative;
        background: #f8f9fa;
    }

.product-image {
    width: 100%;
    height: 100%;
    object-fit: contain; /* üîπ avant c‚Äô√©tait cover, maintenant contain pour ‚Äúzoom out‚Äù */
    transition: transform 0.5s ease;
    padding: 10px; /* üîπ ajoute un peu d‚Äôespace autour */
}

    .product-card:hover .product-image {
        transform: scale(1.05);
    }

    .product-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background: linear-gradient(135deg, #0d6efd, #0a58ca);
        color: white;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 500;
    }

    .card-body {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        height: calc(100% - 220px);
    }

    .product-title {
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
        line-height: 1.3;
    }

    .product-description {
        color: #6c757d;
        font-size: 0.9rem;
        line-height: 1.4;
        flex-grow: 1;
        margin-bottom: 1rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .product-price {
        font-size: 1.25rem;
        font-weight: 700;
        color: #28a745;
        margin-bottom: 1rem;
    }

    .btn-view {
        border-radius: 25px;
        font-size: 0.9rem;
        font-weight: 600;
        padding: 0.5rem 1.5rem;
        transition: all 0.3s ease;
        border: 2px solid #0d6efd;
        background: transparent;
        color: #0d6efd;
    }

    .btn-view:hover {
        background: linear-gradient(135deg, #0d6efd, #0a58ca);
        color: #fff;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
    }

    .btn-primary {
        background: linear-gradient(135deg, #0d6efd, #0a58ca);
        border: none;
        border-radius: 25px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(13, 110, 253, 0.4);
    }


    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #6c757d;
    }

    .empty-state i {
        font-size: 4rem;
        margin-bottom: 1rem;
        color: #dee2e6;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .product-image-container {
            height: 200px;
        }
        
        .page-header {
            padding: 2rem 0;
            margin-bottom: 2rem;
        }
        
        .card-body {
            padding: 1.25rem;
        }
    }

    @media (max-width: 576px) {
        .product-image-container {
            height: 180px;
        }
        
        .col-md-4 {
            margin-bottom: 1.5rem;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">
            <i class="bi bi-box-seam me-2"></i> Products
        </h1>
        <a href="{{ path('app_product_new') }}" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Add New Product
        </a>
    </div>

<div class="container mb-5">
    {% if products is not empty %}
        <div class="row g-4">
            {% for product in products %}
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                    <div class="card product-card">
                        <div class="product-image-container">
                            <img src="{{ asset(product.image) }}" alt="{{ product.name }}" class="product-image">
                            <div class="product-badge">New</div>
                        </div>
                        <div class="card-body">
                            <h5 class="product-title">{{ product.name }}</h5>
                            <p class="product-description">
                                {{ product.description|slice(0, 100) }}{% if product.description|length > 100 %}...{% endif %}
                            </p>
                            <div class="product-price">{{ product.price }} DT</div>
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-view w-100">
                                <i class="bi bi-eye me-2"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="empty-state">
            <i class="bi bi-inbox"></i>
            <h3 class="h4 text-muted mb-3">No Products Found</h3>
            <p class="text-muted mb-4">Get started by adding your first product to the catalog.</p>
            <a href="{{ path('app_product_new') }}" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i> Add Your First Product
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}


