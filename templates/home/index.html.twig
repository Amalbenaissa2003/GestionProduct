{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block stylesheets %}
<style>

:root {
  --primary-blue: #0d6efd;
  --primary-dark: #0056b3;
  --primary-light: #e3f2fd;
  --accent-color: #00b4d8;
  --text-dark: #333;
  --text-muted: #6c757d;
  --border-radius: 12px;
  --shadow-light: 0 4px 12px rgba(0, 0, 0, 0.08);
  --shadow-medium: 0 6px 20px rgba(0, 0, 0, 0.12);
}
.container {
  max-width: 1200px;
}
.home-hero {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 4rem 2rem;
  background: linear-gradient(135deg, #f8f9fb 0%, #e9ecef 100%);
  border-radius: var(--border-radius);
  margin: 2rem 0;
  box-shadow: var(--shadow-light);
  position: relative;
  overflow: hidden;
}

.home-hero::before {
  content: "";
  position: absolute;
  top: -50%;
  right: -50%;
  width: 100%;
  height: 200%;
  background: radial-gradient(circle, rgba(13, 110, 253, 0.05) 0%, transparent 70%);
  z-index: 0;
}

.home-hero-text {
  max-width: 550px;
  position: relative;
  z-index: 1;
}

.home-hero-text h1 {
  font-size: 2.75rem;
  color: var(--primary-dark);
  font-weight: 800;
  margin-bottom: 1.5rem;
  line-height: 1.2;
}

.home-hero-text p {
  font-size: 1.15rem;
  color: var(--text-muted);
  margin-bottom: 2.5rem;
  line-height: 1.6;
}

.home-hero-text .btn-primary {
  padding: 0.85rem 2.5rem;
  font-weight: 600;
  border-radius: 30px;
  font-size: 1.05rem;
  background: linear-gradient(135deg, var(--primary-blue), var(--primary-dark));
  border: none;
  box-shadow: 0 4px 15px rgba(13, 110, 253, 0.3);
  transition: all 0.3s ease;
}

.home-hero-text .btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(13, 110, 253, 0.4);
}

.home-hero-image {
  position: relative;
  z-index: 1;
}

.home-hero-image img {
  max-width: 400px;
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-medium);
  transition: transform 0.5s ease;
}

.home-hero-image img:hover {
  transform: scale(1.02);
}

.btn {
  border-radius: 8px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary-blue), var(--primary-dark));
  border: none;
}

.btn-outline-primary {
  border: 2px solid var(--primary-blue);
  color: var(--primary-blue);
  font-weight: 500;
}

.btn-outline-primary:hover {
  background: var(--primary-blue);
  border-color: var(--primary-blue);
}
</style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="home-hero">
        <div class="home-hero-text">
            <h1>Discover Your Next Product</h1>
            <p>Explore our wide range of products, find what you love, and manage your cart easily. Whether you're browsing or managing the catalog, everything is just a click away!</p>
            <a href="{{ path('app_product_index') }}" class="btn btn-primary">Browse Products</a>
        </div>
        <div class="home-hero-image">
            <img src="{{ asset('images/shop.jpg') }}" alt="Product Theme">
        </div>
    </div>
</div>
{% endblock %}


